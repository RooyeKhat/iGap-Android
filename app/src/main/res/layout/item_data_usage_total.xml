<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/rootDataUsageTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp8"

     >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <net.iGap.module.HeaderTextview
                android:id="@+id/txtTitle"
                style="?textTitleColorSettingTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp18"
                android:text="@string/total"
                android:textSize="@dimen/dp16"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/liTotalSent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp48"
                android:layout_below="@+id/txtTitle"
                android:layout_marginTop="@dimen/dp14"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTotalSent"
                    style="?textTitleColorSettingTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp20"
                    android:layout_marginRight="@dimen/dp20"
                    android:layout_weight="1"
                    android:textSize="@dimen/dp14"
                    android:text="@string/total_sent" />


                <net.iGap.module.HeaderTextview
                    android:id="@+id/txtTotalSentByte"
                    style="?textTitleColorSettingTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp20"
                    android:layout_marginRight="@dimen/dp20"
                    android:text="22" />
            </LinearLayout>

            <View
                android:id="@+id/view1"
                style="?lineColorSettingTheme"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_below="@+id/liTotalSent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp48"
                android:layout_below="@+id/view1"
                android:layout_marginBottom="@dimen/dp8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTotalReceived"
                    style="?textTitleColorSettingTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp20"
                    android:layout_marginRight="@dimen/dp20"
                    android:layout_weight="1"
                    android:textSize="@dimen/dp14"
                    android:text="@string/total_received" />


                <net.iGap.module.HeaderTextview
                    android:id="@+id/txtTotalReceivedByte"
                    style="?textTitleColorSettingTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp20"
                    android:layout_marginRight="@dimen/dp20"
                    android:text="2489" />

            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>